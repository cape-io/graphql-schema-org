{
  "extends": [
    "airbnb-base",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "env": {
    "browser": false
  },
  "rules": {
    "comma-dangle": [2, "always-multiline"],
    "id-length": [2, {
      "min": 3,
      "max": 30,
      "properties": "never",
      "exceptions": ["t", "id", "db", "Me", "me"]
    }],
    "import/no-named-as-default": 2,
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["dev/*.js"]}],
    "no-console": 1,
    "no-alert": 1,
    "no-trailing-spaces": 2,
    "semi": [ 2, "never" ]
  }
}
